<h1 align=center>Log in!</h1>


<%= form_for(:session, local: true, :html => {class: "form-horizontal",role: "form"},url:login_path) do |form| %>

<div class="form-group">
  <div class="control-label col-sm-2">
    <%= form.label :email%>
  </div>
  <div class="col-sm-8">
    <%= form.email_field :email, id: :user_email, class: "form-control", placeholder: "Enter email", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <div class="control-label col-sm-2">
    <%= form.label :password %>
  </div>
  <div class="col-sm-8">
    <%= form.password_field :password, id: :user_password, class: "form-control", placeholder: "Password" %>
  </div>
</div>
<div class="form-group">
<div class="col-sm-offset-2 col-sm-10">
  <%= form.submit "Log in!", class: "btn btn-primary btn-lg" %>
  </div>
</div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">
[ <%= link_to 'Cancel request and return to users listing', beers_path %> ]
</div>