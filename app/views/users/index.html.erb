<h1 align = "center">All Beer Bloggers</h1>
<div align = "center">
	<% @users.each do |user| %>
	<ul class="listing">
		<div class="row">
			<div class="well col-md-4 col-md-offset-4">
				<li><%= link_to avatar_for(user), user_path(user) %></li>
				<li class="beer-title">
					<%=	link_to user.username, user_path(user) %>
				</li>
				<li><small><%= pluralize(user.beers.count, "beers") if user.beers %></small>
				</li>
			</div>
		</div>
	</ul>
	<% end %>
</div>