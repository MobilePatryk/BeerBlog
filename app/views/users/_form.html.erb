<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, id: :username, placeholder:"Enter username" %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, id: :email,placeholder:"Enter e-mail" %>
  </div>
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :password, placeholder: "Enter password" %>
  </div>
  <div class="actions">
    <%= form.submit(@user.new_record? ? "Sign up" : "Update account") %>
  </div>
<% end %>