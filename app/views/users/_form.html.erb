<div class="row"> 
   <div class="col-xs-8">
    <%= form_with(model: user, local: true, class: "form-horizontal", role: "form") do |form| %>
    
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :username %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :username, id: :user_name, class: "form-control", placeholder: "user name", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :email %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :email, id: :user_email, class: "form-control", placeholder: "E-mail" %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :password %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :password, id: :user_password, class: "form-control",type: "password", placeholder: "Password" %>
      </div>
    </div>
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Sign Up!", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to 'Cancel request and return to users listing', users_path %> ]
    </div>
    
  </div>
</div>