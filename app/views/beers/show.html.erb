<h2 align="center">Name: <%= @beer.name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<h4 class="center type"><strong>Type:</strong></h4>
	<hr><%= simple_format(@beer.beer_type)%>

	<h4 class="center"><strong>Country:</strong></h4>
	<hr><%= simple_format(@beer.country)%>

	<h4 class="center"><strong>Price:</strong></h4>
	<hr><%= simple_format(number_to_currency(@beer.price, locale: :pl,strip_insignificant_zeros: false))%>

	<div class="article-actions">
		<%= link_to 'Edit this beer', edit_beer_path(@beer), class: "btn btn-xs btn-primary" %> 
		<%= link_to 'View all beers', beers_path, class: "btn btn-xs btn-success" %>
		<%= link_to "Delete this beer", beer_path(@beer), method: :delete,
		data: {confirm: "Are You sure?"}, 
		class: "btn btn-xs btn-danger" %>
	</div>
</div>
