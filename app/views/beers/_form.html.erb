 <div class="row"> 
   <div class="col-xs-6">
    <%= form_with(model: beer, local: true, class: "form-horizontal", role: "form") do |form| %>
    <% if beer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

      <ul>
        <% beer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :name %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :name, id: :beer_name,class: "form-control", placeholder: "Beer name", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :country %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :country, id: :beer_country, class: "form-control", placeholder: "Country where beer was made" %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :price %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :price, id: :beer_price, class: "form-control", placeholder:"The price of Your beer" %>
      </div>
    </div>
<div class="form-group">
      <div class="row">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do|cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <% end %>
    <div class="col-xs-6 col-xs-offset-4">
    [ <%= link_to 'Cancel request and return to beers listing', beers_path %> ]
    </div>
  </div>
</div>


