 <div class="row"> 
   <div class="col-xs-6">
    <%= form_with(model: category, local: true, class: "form-horizontal", role: "form") do |form| %>
    <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :name %>
      </div>
      <div class="col-sm-8">
        <%= form.text_field :name, id: :category_name,class: "form-control", placeholder: "category name", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <% end %>
    <div class="col-xs-6 col-xs-offset-4">
    [ <%= link_to 'Cancel request and return to categories listing', categories_path %> ]
    </div>
  </div>
</div>


